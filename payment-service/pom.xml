                    <artifactId>prometheus-metrics-instrumentation-jvm</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>io.prometheus.metrics</groupId>
                    <artifactId>prometheus-metrics-instrumentation-spring</artifactId>
                </exclusion>
            </exclusions>
